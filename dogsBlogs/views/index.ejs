<% include header %>


<% blogs.forEach(function(blog) {  %>
    
    <div class="container mt-5">
        <div class="w-75 p-3 mx-auto">
        <div class="card">
        <div class="row no-gutters">
            <div class="col-lg-8">
                <img src="<%= blog.image %>"  width="400"> <br />
            </div>
            <div class="col-lg-4">
                <h3><%= blog.title %></h3>
                <span><%= blog.created.toDateString() %></span><br />
                <p><%= blog.body %></p>
                <a class="btn btn-dark" href="/blogs/<%= blog._id %>">Read More</a>
            </div>
        </div>
           
        </div>
        </div>
    </div>

<% }) %>

<div class="">
</div>


<% include footer %>
