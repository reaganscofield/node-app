<% include header %>

<div class="container mt-5">
    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.image %>"  width="300px"> <br />
        <span><%= blog.created.toDateString() %></span>
        <p><%= blog.body %></p>
        <a class="btn btn-dark" href="/index/<%= blog._id %>/edit">Edit</a>
        <form method="POST" action="/index/<%= blog._id %>?_method=DELETE">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>



<% include footer %>
